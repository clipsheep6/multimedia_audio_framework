import("//build/ohos.gni")

AUDIO_ROOT_DIR = "//foundation/multimedia/audio_standard"

config("sound_manager_config") {
  include_dirs = [
    "$AUDIO_ROOT_DIR/interfaces/innerkits/native/audiocommon/include",
    "$AUDIO_ROOT_DIR/interfaces/innerkits/native/audiosoundmanager/include",
    "$AUDIO_ROOT_DIR/frameworks/innerkitsimpl/audiosoundmanager/include",
    "//base/hiviewdfx/hilog/interfaces/native/innerkits/include",
    "//drivers/peripheral/base",
    "//drivers/peripheral/display/interfaces/include",
    "//foundation/aafwk/standard/frameworks/kits/ability/native/include",
    "//foundation/aafwk/standard/frameworks/kits/ability/native/include",
    "//foundation/aafwk/standard/interfaces/innerkits/dataobs_manager/include",
    "//foundation/communication/ipc/interfaces/innerkits/ipc_core/include",
    "//foundation/distributeddatamgr/appdatamgr/interfaces/innerkits/native_appdatafwk/include",
    "//foundation/distributeddatamgr/appdatamgr/interfaces/innerkits/native_rdb/include",
    "//foundation/distributeddatamgr/appdatamgr/interfaces/innerkits/native_rdb/include",
    "//foundation/multimedia/medialibrary_standard/frameworks/innerkitsimpl/media_library/include",
    "//foundation/multimedia/medialibrary_standard/interfaces/innerkits/native/include",
    "//utils/native/base/include",
  ]

  cflags = [
    "-Wall",
    "-Werror",
  ]
}

ohos_shared_library("audio_sound_manager") {
  install_enable = true

  configs = [ ":sound_manager_config" ]

  sources = [ "$AUDIO_ROOT_DIR/frameworks/innerkitsimpl/audiosoundmanager/src/audio_sound_manager.cpp" ]

  deps = [
    "//foundation/aafwk/standard/frameworks/kits/ability/native:abilitykit_native",
    "//foundation/aafwk/standard/frameworks/kits/appkit:appkit_native",
    "//foundation/aafwk/standard/interfaces/innerkits/base:base",
    "//foundation/distributedschedule/dmsfwk/interfaces/innerkits/uri:zuri",
    "//utils/native/base:utils",
  ]

  external_deps = [
    "ability_runtime:ability_manager",
    "appexecfwk_standard:appexecfwk_base",
    "hiviewdfx_hilog_native:libhilog",
  ]

  part_name = "multimedia_audio_standard"
  subsystem_name = "multimedia"
}
