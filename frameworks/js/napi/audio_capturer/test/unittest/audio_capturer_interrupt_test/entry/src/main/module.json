{
  "module": {
    "name": "entry",
    "type": "entry",
    "srcEntrance": "./ets/Application/AbilityStage.ts",
    "description": "$string:testModule_entry_dsc",
    "mainElement": "ohos.audiocapture.bundle.stage.test.MainAbility",
    "deviceTypes": [
      "default",
      "tablet"
    ],
    "deliveryWithInstall": true,
    "installationFree": false,
    "uiSyntax": "ets",
    "pages": "$profile:main_pages",
    "metadata": [
      {
        "name": "ArkTSPartialUpdate",
        "value": "false"
      }
    ],
    "abilities": [
      {
        "name": "ohos.audiocapture.bundle.stage.test.MainAbility",
        "srcEntrance": "./ets/MainAbility/MainAbility.ts",
        "description": "$string:testModule_entry_main",
        "icon": "$media:icon",
        "label": "$string:entry_label",
        "visible": true,
        "launchType": "singleton",
        "orientation": "portrait",
        "skills": [
          {
            "actions": [
              "action.system.home"
            ],
            "entities":[
              "entity.system.home"
            ]
          }
        ]
      }
    ],
    "requestPermissions": [
      {
        "name": "ohos.permission.MICROPHONE",
        "reason": "use ohos.permission.MICROPHONE"
      },
      {
        "name": "ohos.permission.GET_BUNDLE_INFO",
        "reason": "$string:permission_reason",
        "usedScene": {
          "abilities": ["MainAbility"],
          "when": "always"
        }
      },
      {
        "name": "ohos.permission.READ_CALENDAR",
        "reason": "$string:permission_reason",
        "usedScene": {
          "abilities": ["MainAbility"],
          "when": "inuse"
        }
      }
    ]
  }
}
